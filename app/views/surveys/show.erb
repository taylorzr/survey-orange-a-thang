<h1><%=@survey.name%></h1>
<form action = "/surveys/<%=@survey.id%>" method="post">

  <ol>
      <% @survey.questions.each do |question| %>
        <li><%=question.text%></li>
          <ul class="choices">
            <%question.choices.each do |choice| %>
              <li><input type="radio" value = "<%=choice.id%>" name="questions[<%=question.id%>]"><%=choice.text%></li>
            <% end %>
          </ul>
      <%end%>
  </ol>
    <input type="submit" value="Submit">
</form>


